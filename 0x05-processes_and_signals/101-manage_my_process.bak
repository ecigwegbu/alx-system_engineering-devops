#!/usr/bin/env bash
# This script does the following:
# manages my rocess

if [ "$#" -ne 2 ] && { [ "$1" != "start" ]\
	&& [ "$1" != "stop" ]\
	&& [ "$1" != "restart" ]; }; then
	echo "Usage: manage_my_process {start|stop|restart}"
	exit 1
fi

if [ "$1" = "start" ]; then
	# do start
	./manage_my_process
	pgrep -f "./manage_my_process" > /var/run/my_process.pid
	echo "manage_my_process started"
elif [ "$1" = "stop" ]; then
	# do stop
	pkill -f "./manage_my_process"
	if [ -e "/var/run/my_process.pid" ]; then rm "/var/run/my_process.pid"
	echo "manage_my_process stopped"
elif [ "$1" = "restart" ]; then
	# do restart
	pkill -f "./manage_my_process"
	if [ -e "/var/run/my_process.pid" ]; then rm "/var/run/my_process.pid"
	./manage_my_process
	pgrep -f "./manage_my_process" > /var/run/my_process.pid
	echo "manage_my_process restarted"
fi
echo yes
